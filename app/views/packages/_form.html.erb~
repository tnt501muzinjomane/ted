<%= form_for @package, :html => { :class => "form-horizontal package" } do |f| %>

    <% if @package.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@package.errors.count, "error") %> prohibited this package from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @package.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control', :required=> true %>
    </div>
    <%= error_span(@package[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :cost, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cost, :class => 'form-control', :precision => 2, :required => true %>
    </div>
    <%= error_span(@package[:cost]) %>
  </div>
  <div class="control-group">
    <%= f.label :establishment_id, :class => 'control-label' %>
    <div class="controls">
     
      <%= collection_select(:package,:establishment_id,@establishments, :id,:name,{:prompt => 'Select establishment'}, :class => 'form-control' ) %>
    </div>
    <%= error_span(@package[:establishment_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            packages_path, :class => 'btn btn-default' %>

<% end %>
